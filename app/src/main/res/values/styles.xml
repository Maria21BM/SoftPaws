<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CatLabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CatValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="CatRating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">@dimen/no_5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:scaleX">@dimen/no_0.7</item>
        <item name="android:scaleY">@dimen/no_0.7</item>
    </style>
</resources>